algoritmo "idadeCreuza"
var
   ano_nasc, ano_atual, r: inteiro
inicio
      escreval("-------IDADE CREUZA--------")
      escreval("Brendo perdi minha memória...")
      escreval("preciso saber, para poder comprar")
      escreval("a quantidade de velas para meu")
      escreval("aniversário que vai acontecer agora!")
      escreval("Em que ano nasci mesmo?")
      leia(ano_nasc)
      escreval("Em que ano estamos?")
      leia(ano_atual)
      r <- ano_atual - ano_nasc
      escreval("Eita miséraaa!!! Então estou com ", r ," anos.")
fimalgoritmo
